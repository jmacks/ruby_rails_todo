<div>
<p><%= @user.username %></p>
  <h1><%= @list.title %></h1>
  <ul class="todos">
    <% @list.todos.each do |todo| %>
      <li>
        <input type="checkbox">

        <%= todo.content %>

        <%= link_to 'X', user_list_todo_path(@user.id, @list.id, todo.id), method: :delete %>
      </li>
    <% end %>
  </ul>

<h6>Add a ToDo</h6>

<%= form_for @todo, url: user_list_todos_path(@user.id, @list) do |f| %>
<%= f.text_field :content %>
<%= f.submit "add todo" %>
<% end %>


</div>
